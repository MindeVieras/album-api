{
  "openapi": "3.0.0",
  "info": {
    "title": "Album API",
    "description": "RestFul API.",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    },
    {
      "url": "https://album.mindevieras.com/api",
      "description": "Main (production) server"
    }
  ],
  "tags": [
    {
      "name": "Authenticataion",
      "description": "JWT authentication."
    }
  ],
  "paths": {
    "/authenticate": {
      "post": {
        "summary": "Returns token if authentication is successfull.",
        "description": "Username and password is required.",
        "tags": [
          "Authenticataion"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A JSON array of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}